<h1>Введите число n ≤ 10^6:</h1>
<div>
  <%= form_with url: '/number/result', data: { turbo: false } do |form| %>
    <div>
      <div>Input numbers:</div>
      <%= number_field_tag(:n, "Input n from 1 to 100", min:"1", max:"1000000", pattern: "^[1-9][0-9]?$|^100$") %>
    </div>
    
  <div>
	  <% [1, 2, 3, 4].each do |operation| %>
	    <div>	    
	      <%= form.radio_button(:visualise, operation) %>
        <% types = ["Сервер", "Сервер (xml)", "Клиент", "Клиент (xml)"] %>
        <%= form.label(types[operation-1]) %>
      </div>
	  <% end %>
  </div>

  <%= form.submit("Result", class: "btn btn-dark", id: 'calculate-btn') %>
  <% end %>
</div>
